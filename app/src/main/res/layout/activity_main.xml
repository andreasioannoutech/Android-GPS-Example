<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kikkos.gps_location.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS INFO HERE"
        android:id="@+id/txtData"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/btnGPSshow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SHOW\nDATA"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GPS\nOn/Off"
        android:id="@+id/btnGPStoggle"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/btnGPSshow"
        android:layout_alignParentRight="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NW\n ON/OFF"
        android:id="@+id/btnNWpro"
        android:layout_below="@+id/btnGPStoggle"
        android:layout_alignLeft="@+id/btnGPStoggle"
        android:layout_alignStart="@+id/btnGPStoggle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CLEAR"
        android:id="@+id/btnClear"
        android:layout_below="@+id/btnNWpro"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BOTH On/Off"
        android:id="@+id/btnBothProviders"
        android:layout_below="@+id/btnClear"
        android:layout_alignLeft="@+id/btnClear"
        android:layout_alignStart="@+id/btnClear" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOC\nENABLED?"
        android:id="@+id/btnEnabled"
        android:layout_below="@+id/btnBothProviders"
        android:layout_alignLeft="@+id/btnBothProviders"
        android:layout_alignStart="@+id/btnBothProviders" />

</RelativeLayout>
